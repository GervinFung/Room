<link rel="stylesheet" href="./css/room.css">
<link rel="stylesheet" href="./css/waiting.css">
<style>
    #saved-button {
        color: white !important;
        background-color: black !important;
    }
</style>
<div class="container">
    <div class="header">
        <div class="logo">
            <img src="../img/index.jpg" alt="">
        </div>
        <div class="title">
            <h2>Accomodation Listing</h2>
        </div>
        <div class="filter-wrapper">
            <div class="filter-input">
                <i class="fa fa-search"></i>
                <label>
                    <input type="text" name="advanced-search" id="advanced-search" placeholder="Type here to search" autofocus>
                </label>
            </div>
        </div>
        <div class="filter-wrapper">
            <div class="button-wrapper">
                 <a href="room?campus=KP" class="button" id="kampar">Kampar</a>
            </div>
            <div class="button-wrapper">
                <a href="room?campus=SL" class="button" id="sg-long">Sg Long</a>
            </div>
        </div>
        <div class="filter-wrapper" id="non-campus-filter">
            <div id="saved">
                <a href="saved" class="button" id="saved-button">Saved</a>
            </div>
            <div class="dropdown" id="price-range-dropdown">
                <button id="price-range-button" class="button">Price</button>
                <div class="dropdown-content" id="price-range-dropdown-content">
                    <div id="price-range-list">
                        <div class="range">
                          <input type="range" min={{set.minmin}} max={{set.maxmax}} class="slider" id="lower-range-scroll">
                        <div class="price-wrapper">
                            <p>min price</p>
                            <label><span>RM</span><input  min={{set.minmin}} max={{set.maxmax}} type="text" id="lower-range-input" class="price"></label>
                        </div>
                    </div>
                    <div class="range">
                        <input type="range"  min={{set.minmin}} max={{set.maxmax}} class="slider" id="upper-range-scroll">
                        <div class="price-wrapper">
                            <p>max price</p>
                            <label><span>RM</span><input min={{set.minmin}} max={{set.maxmax}} type="text" id="upper-range-input" class="price"></label>
                            </div>
                        </div>
                    </div>
                    <div class="option">
                        <button id="price-clear-button" class="clear-button">Clear</button>
                        <button id="price-search-button" class="search-button">Search</button>
                    </div>
                </div>
            </div>
            <div class="dropdown" id="room-capacity-dropdown">
                <button id="room-capacity-button" class="button">Room Capacity</button>
                <div class="dropdown-content" id="room-capacity-dropdown-content">
                    <div id="room-capacity-list">
                        {{#each set.cap}}
                          {{#if (lookup ../set.checkedCap @index)}}
                            <label><input type="checkbox" id="capacity-{{.}}" checked><span class="room-capacity">{{.}} Tenant</span></label>
                          {{else}}
                            <label><input type="checkbox" id="capacity-{{.}}"><span class="room-capacity">{{.}} Tenant</span></label>
                          {{/if}}
                        {{/each}}
                    </div>
                    <div class="option">
                        <button id="rc-clear-button" class="clear-button">Clear</button>
                        <button id="rc-search-button" class="search-button">Search</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="download-wrapper">
            <a href="../files/saved.txt" download class="button" id="download-txt-button">Download as Text File</a>
            <a href="../files/saved.html" download class="button" id="download-html-button">Download as HTML File</a>
            <a href="../files/saved.pdf" download class="button" id="download-pdf-button">Download as PDF File</a>
        </div>
    </div>
    <div class="content" id="infos-content">
      {{#each places}}
        {{> room}}
      {{/each}}
    </div>
    <div id="waitingBackground">
        <div class="waiting-content">
            <div class="loader"></div>
        </div>
    </div>
</div>
<script src="../js/room.js"></script>
<script src="../js/displaySaved.js"></script>